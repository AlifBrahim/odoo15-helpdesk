<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="stage_open" model="helpdesk.stage">
            <field name="name">Open</field>
            <field name="mail_template_id" ref="support_ticket_new"/>
            <field name="unattended">True</field>
        </record>

        <record id="stage_staff_replied" model="helpdesk.stage">
            <field name="name">Staff Replied</field>
        </record>

        <record id="stage_customer_replied" model="helpdesk.stage">
            <field name="name">Customer Replied</field>
            <field name="unattended">True</field>
        </record>

        <record id="stage_awaiting_approval" model="helpdesk.stage">
            <field name="name">Awaiting Approval</field>
        </record>

        <record id="stage_approval_accepted" model="helpdesk.stage">
            <field name="name">Approval Accepted</field>
            <field name="unattended">True</field>
        </record>

        <record id="stage_approval_rejected" model="helpdesk.stage">
            <field name="name">Approval Rejected</field>
            <field name="unattended">True</field>
        </record>

        <record id="stage_customer_closed" model="helpdesk.stage">
            <field name="name">Customer Closed</field>
            <field name="mail_template_id" ref="support_ticket_closed"/>
        </record>

        <record id="stage_staff_closed" model="helpdesk.stage">
            <field name="name">Staff Closed</field>
            <field name="mail_template_id" ref="support_ticket_closed"/>
        </record>
        
    </data>     
</odoo>